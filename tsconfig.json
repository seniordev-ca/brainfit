{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es5",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "rootDir": "./",
    "esModuleInterop": true,
    "baseUrl": "./",
    "module": "commonjs",

    "paths": {
      "/opt/nodejs/*": ["lambda/layers/shared/nodejs/*"]
    }
  },
  "include": ["lambda/**/*"],
  "exclude": ["node_modules"]
}
